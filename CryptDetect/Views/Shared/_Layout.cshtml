<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CryptDetect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-0 border-light">
            <div class="container-fluid p-0">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/Images/logo.png" alt="CryptDetect" class="navbar-brand" width="225"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">

                    <ul class="navbar-nav">
                        
                        <li class="nav-item border border-white rounded-pill pl-5 pr-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Detector" asp-action="Index" asp-action="Try Now"><span>Try Now</span></a> 
                        </li>

                        <!--Download button is inteaded to be removed in end version patch. TODO: Find and remove the handler for downloads page-->
                        <!--
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Download">Download</a>
                        </li>

                        -->

                        <li class="nav-item border border-white ml-4 rounded-pill pl-5 pr-5" >
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="GitHub"><span>GitHub</span></a>
                        </li>


                        <li class="nav-item border border-white ml-4 rounded-pill pl-5 pr-5">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About"><span>About Us</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - CryptDetect
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
